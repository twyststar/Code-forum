{{#if addNewAnswer}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>New Answer:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>

      <div class="form-group">
        <label for="author">Your Name</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Your Answer</label>
        {{textarea class="form-control" rows="6" value=content id="content"}}
      </div>
      <div class="panel-footer">
        <button class="btn bg-success"{{action 'saveAnswer'}}>Publish</button>
      </div>
      </form>
    </div>
  </div>
</div>


{{else}}
  <button class="btn bg-success"{{action 'answerFormShow'}}>Add New Answer</button>
{{/if}}
