{{#if updateQuestion}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>Update Question:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
        <label for="title">Update Title</label>
        {{input class="form-control" value=title id="title" placeholder=question.title}}
      </div>
      <div class="form-group">
        <label for="content">Update Question</label>
        {{textarea class="form-control" rows="6" value=content id="content" placeholder=question.content}}
      </div>
      <div class="panel-footer">
        <button class="btn bg-success"{{action 'update' question}}>Update</button>
      </div>
      </form>
    </div>
  </div>
  <button class="btn bg-danger"{{action 'delete' question}}>Delete</button>
</div>
{{else}}
<button class="btn bg-warning" {{action "updateQuestionFormShow" question}}>Edit/delete question</button>
{{/if}}
