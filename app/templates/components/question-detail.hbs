<div class="panel panel-default">
  <div class="panel-heading">
    <h2>{{question.title}}</h2>
  </div>
  <div class="panel-body">
    <p>
      {{question.content}}
    </p>
  </div>
  <div class="panel-footer">
    <h5>Asked by {{question.author}} on {{question.createdAt}}</h5>
  </div>
</div>
<h4>Answers:</h4>
{{#each question.answers as |answer|}}

<div class="panel panel-success">
  <div class="panel-heading">
    <h5>Answered on {{answer.createdAt}}</h5>

  </div>
  <div class="panel-body">
    <p>{{answer.content}}</p>
  </div>
  <div class="panel-footer">
    <h6>By {{answer.author}}</h6>
  </div>
</div>
{{/each}}
