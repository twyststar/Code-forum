{{#if addNewQuestion}}
<div class="panel">
  <div class="panel-heading question">
    <h1>New Question:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
        <label for="title">Question Title</label>
        {{input class="form-control" value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Your Question</label>
        {{textarea class="form-control" rows="6" value=content id="content"}}
      </div>
      <div class="panel-footer question-foot">
        <button class="btn question"{{action 'saveQuestion'}}>Ask!!</button>
      </div>
      </form>
    </div>
  </div>
</div>


{{else}}
  <button class="btn question"{{action 'questionFormShow'}}>Create New Question</button>
{{/if}}
