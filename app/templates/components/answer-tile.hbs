{{#each answers as |answer|}}
{{#link-to 'answer' answer.id}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h5>Answered on {{answer.createdAt}}</h5>
  </div>
  <div class="panel-body">
    <p>{{answer.content}}</p>
  </div>
  <div class="panel-footer">
    <h6>By {{answer.author}}</h6>
  </div>
</div>
{{/link-to}}
{{/each}}
